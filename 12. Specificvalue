public class Main {
public static void main(String[] args) {
int[] arr = {1, 2, 3, 2, 2, 4};
int valueToCheck = 2;
int count = 0;

    for (int num : arr) {
        if (num == valueToCheck) count++;
        if (count == 3) break;
    }

    if (count >= 3) {
        System.out.println(valueToCheck + " appears at least 3 times.");
    } else {
        System.out.println(valueToCheck + " appears less than 3 times.");
    }
}

}
